{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "tsi/text-with-side-image",
  "title": "Text with Side Image",
  "category": "design",
  "description": "Блок с текстом и опциональной картинкой на полях",
  "textdomain": "tsi",
  "attributes": {
    "content": {
      "type": "string",
      "source": "html",
      "selector": ".tsi-content"
    },
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "imageAlt": {
      "type": "string",
      "default": ""
    },
    "imageId": {
      "type": "number",
      "default": 0
    },
    "imagePosition": {
      "type": "string",
      "default": "left"
    },
    "imageWidth": {
      "type": "number",
      "default": 150
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}